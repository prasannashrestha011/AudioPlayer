<Window x:Class="AudioPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
        xmlns:models="clr-namespace:AudioPlayer.ViewModels"
        xmlns:views="clr-namespace:AudioPlayer.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500" MinWidth="500" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
           
        </Grid.ColumnDefinitions>
        <ContentControl Content="{Binding CurrentViewModel}" >
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type  models:AudioPlayerViewModel}">
                    <views:AudioPlayerView/>
                </DataTemplate>
            </ContentControl.Resources>

        </ContentControl>
        <Grid Width="250" Margin="0,20,0,0" HorizontalAlignment="Right">

            <Grid.RenderTransform>
                <TranslateTransform x:Name="TranslateNav" X="180" />
            </Grid.RenderTransform>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="180"/>
            </Grid.ColumnDefinitions>
            <Button Content="Nav" Height="30" VerticalAlignment="Top" Click="Button_Click" />
            <views:PlayListSideBar   Grid.Column="1"/>

           
        </Grid>
    </Grid>
</Window>
