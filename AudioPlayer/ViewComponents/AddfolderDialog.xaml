<Window x:Class="AudioPlayer.ViewComponents.AddfolderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlayer.ViewComponents"
        ResizeMode="NoResize"
        MaxWidth="290"
        MaxHeight="150"
        mc:Ignorable="d"
        Title="Create Folder"
         WindowStartupLocation="CenterScreen"
        MinHeight="150"
        MinWidth="290">
    <Grid>
        <Grid>
            <StackPanel >
                <Label Content="Folder name" Margin="10,0,0,0"/>
                <TextBox Width="180" Height="30" Text="{Binding FolderName,RelativeSource={RelativeSource AncestorType=Window}}"/>
                <Button Content="Done" Width="80" Margin="0,10,0,0" Click="Button_Click"/>
           
          

            </StackPanel>
        </Grid>
    </Grid>
</Window>
